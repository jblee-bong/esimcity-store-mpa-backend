<!DOCTYPE html>
<html lang="ko" xmlns:th="http://www.thymeleaf.org">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>eSIM CITY - 사용량 조회</title>
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800;900&family=Noto+Sans+KR:wght@300;400;500;600;700;800;900&display=swap" rel="stylesheet">
  <link rel="icon" type="image/svg+xml" href="/assets/img/esimcity/favicon.svg">
  <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
  <script src="https://cdn.portone.io/v2/browser-sdk.js"></script>
  <style>
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }

    :root {
      --gold: #D4AF37;
      --gold-light: #F5E6C8;
      --gold-dark: #B8941F;
      --cream: #FAF8F3;
      --beige: #F5F1EB;
      --white: #FFFFFF;
      --text-dark: #2C2C2C;
      --text-medium: #666666;
      --text-light: #999999;
      --border-light: #E8E5DF;
      --shadow-sm: 0 2px 8px rgba(0, 0, 0, 0.04);
      --shadow-md: 0 4px 16px rgba(0, 0, 0, 0.08);
      --shadow-lg: 0 8px 32px rgba(0, 0, 0, 0.12);
    }

    body {
      font-family: 'Noto Sans KR', 'Inter', -apple-system, BlinkMacSystemFont, sans-serif;
      background: linear-gradient(180deg, #FFFFFF 0%, var(--cream) 100%);
      color: var(--text-dark);
      min-height: 100vh;
      line-height: 1.6;
    }

    .container {
      max-width: 1100px;
      margin: 0 auto;
      padding: 0 32px;
    }

    /* Header */
    .top-header {
      background: var(--white);
      padding: 24px 0;
      border-bottom: 1px solid var(--border-light);
      position: sticky;
      top: 0;
      z-index: 100;
      backdrop-filter: blur(10px);
      background: rgba(255, 255, 255, 0.95);
    }

    .header-inner {
      display: flex;
      justify-content: center;
      align-items: center;
    }

    .brand-logo {
      height: 50px;
      width: auto;
    }

    /* Status Alert */
    .status-alert {
      background: linear-gradient(135deg, var(--gold-dark) 0%, var(--gold) 100%);
      padding: 16px 0;
      text-align: center;
    }

    .status-alert-content {
      display: inline-flex;
      align-items: center;
      gap: 10px;
      color: var(--white);
      font-weight: 600;
      font-size: 16px;
      letter-spacing: 0.5px;
    }

    .status-icon {
      width: 20px;
      height: 20px;
    }

    /* Hero Section */
    .hero-section {
      padding: 64px 0 48px;
      text-align: center;
    }

    .hero-title {
      font-size: 42px;
      font-weight: 800;
      color: var(--text-dark);
      margin-bottom: 12px;
      letter-spacing: -1px;
    }

    .hero-subtitle {
      font-size: 18px;
      color: var(--text-medium);
      font-weight: 400;
    }

    /* Usage Card */
    .usage-card-wrapper {
      margin-bottom: 40px;
    }

    .usage-card {
      background: var(--white);
      border-radius: 20px;
      padding: 48px 56px;
      box-shadow: var(--shadow-md);
      border: 1px solid var(--border-light);
    }

    .usage-header {
      display: flex;
      justify-content: space-between;
      align-items: center;
    }
    .usage-header-reset{
      margin-bottom: 40px;
      padding-bottom: 24px;
      border-bottom: 2px solid var(--gold-light);
    }

    .usage-label {
      font-size: 20px;
      font-weight: 600;
      color: var(--text-medium);
    }
    .usage-charge{
      font-size: 13px;
      color: var(--text-light);
      line-height: 1.5;
    }

    .usage-total {
      font-size: 18px;
      font-weight: 500;
      color: var(--gold-dark);
      background: var(--gold-light);
      padding: 8px 16px;
      border-radius: 12px;
    }

    .usage-visual {
      margin: 48px 0;
    }

    .usage-stats {
      display: flex;
      justify-content: space-between;
      align-items: baseline;
      margin-bottom: 32px;
    }

    .usage-current {
      text-align: left;
    }

    .usage-current-label {
      font-size: 14px;
      font-weight: 500;
      color: var(--text-medium);
      margin-bottom: 8px;
      text-transform: uppercase;
      letter-spacing: 0.5px;
    }

    .usage-current-value {
      font-size: 48px;
      font-weight: 800;
      color: var(--gold);
      line-height: 1;
      font-family: 'Inter', sans-serif;
    }

    .usage-remaining {
      text-align: right;
    }

    .usage-remaining-label {
      font-size: 14px;
      font-weight: 500;
      color: var(--text-medium);
      margin-bottom: 8px;
      text-transform: uppercase;
      letter-spacing: 0.5px;
    }

    .usage-remaining-value {
      font-size: 32px;
      font-weight: 700;
      color: var(--text-dark);
      line-height: 1;
    }

    .usage-bar-container {
      position: relative;
      background: var(--gold-light);
      border-radius: 16px;
      height: 32px;
      overflow: hidden;
      margin-bottom: 16px;
      box-shadow: inset 0 2px 8px rgba(0, 0, 0, 0.05);
    }

    .usage-bar {
      height: 100%;
      background: linear-gradient(90deg, var(--gold-dark) 0%, var(--gold) 50%, var(--gold-light) 100%);
      border-radius: 16px;
      transition: width 1.2s cubic-bezier(0.4, 0, 0.2, 1);
      position: relative;
      box-shadow: 0 2px 12px rgba(212, 175, 55, 0.4);
      overflow: hidden;
    }

    .usage-bar::after {
      content: '';
      position: absolute;
      top: 0;
      left: -100%;
      width: 100%;
      height: 100%;
      background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.3), transparent);
      animation: shimmer 2.5s infinite;
    }

    @keyframes shimmer {
      0% { left: -100%; }
      100% { left: 100%; }
    }

    .usage-percentage-text {
      text-align: center;
      font-size: 18px;
      font-weight: 600;
      color: var(--text-medium);
      margin-top: 12px;
    }

    .usage-percentage-value {
      color: var(--gold-dark);
      font-weight: 700;
    }

    /* Info Cards Grid */
    .info-section {
      margin-bottom: 40px;
    }

    .info-cards-grid {
      display: grid;
      grid-template-columns: repeat(2, 1fr);
      gap: 24px;
      margin-bottom: 24px;
    }

    .info-card {
      background: var(--white);
      border-radius: 16px;
      padding: 32px;
      box-shadow: var(--shadow-sm);
      border: 1px solid var(--border-light);
      transition: all 0.3s ease;
    }

    .info-card:hover {
      box-shadow: var(--shadow-md);
      transform: translateY(-2px);
      border-color: var(--gold-light);
    }

    .info-card-title {
      font-size: 14px;
      font-weight: 600;
      color: var(--gold-dark);
      text-transform: uppercase;
      letter-spacing: 1px;
      margin-bottom: 16px;
    }

    .info-card-value {
      font-size: 24px;
      font-weight: 700;
      color: var(--text-dark);
      margin-bottom: 8px;
      word-break: break-all;
      line-height: 1.4;
    }

    .info-card-note {
      font-size: 13px;
      color: var(--text-light);
      line-height: 1.5;
    }

    .info-card-full {
      grid-column: 1 / -1;
    }

    /* CTA Section */
    .cta-wrapper {
      margin: 48px 0;
    }

    .cta-button {
      display: block;
      background: var(--gold);
      color: var(--white);
      text-align: center;
      padding: 20px 40px;
      border-radius: 14px;
      text-decoration: none;
      font-size: 18px;
      font-weight: 700;
      letter-spacing: 0.5px;
      box-shadow: 0 4px 16px rgba(212, 175, 55, 0.3);
      transition: all 0.3s ease;
    }
    .cta-button-none{
      display: block;
      background: lightslategray;
      color: var(--white);
      text-align: center;
      padding: 20px 40px;
      border-radius: 14px;
      text-decoration: none;
      font-size: 18px;
      font-weight: 700;
      letter-spacing: 0.5px;
      box-shadow: 0 4px 16px rgba(212, 175, 55, 0.3);
      transition: all 0.3s ease;
    }

    .cta-button:hover {
      background: var(--gold-dark);
      transform: translateY(-2px);
      box-shadow: 0 6px 24px rgba(212, 175, 55, 0.4);
    }

    /* Footer */
    .main-footer {
      background: var(--beige);
      padding: 56px 0 40px;
      margin-top: 80px;
      border-top: 1px solid var(--border-light);
    }

    .footer-inner {
      text-align: center;
    }

    .footer-logo {
      height: 45px;
      width: auto;
      margin-bottom: 24px;
      opacity: 0.9;
    }

    .footer-tagline {
      font-size: 16px;
      font-weight: 500;
      color: var(--text-medium);
      margin-bottom: 32px;
      letter-spacing: 1px;
    }

    .footer-divider {
      width: 100%;
      height: 1px;
      background: var(--border-light);
      margin: 32px 0;
    }

    .footer-bottom {
      display: flex;
      justify-content: space-between;
      align-items: center;
      font-size: 13px;
      color: var(--text-light);
    }

    .footer-copyright {
      font-weight: 400;
    }

    .footer-version {
      font-weight: 300;
    }

    /* Responsive */
    @media (max-width: 768px) {
      .container {
        padding: 0 20px;
      }

      .hero-section {
        padding: 40px 0 32px;
      }

      .hero-title {
        font-size: 32px;
      }

      .hero-subtitle {
        font-size: 16px;
      }

      .usage-card {
        padding: 32px 24px;
        border-radius: 16px;
      }

      .usage-header {
        flex-direction: column;
        align-items: flex-start;
        gap: 12px;
      }
      .usage-header-reset{
        margin-bottom: 32px;
      }

      .usage-current-value {
        font-size: 36px;
      }

      .usage-remaining-value {
        font-size: 24px;
      }

      .usage-bar-container {
        height: 28px;
      }

      .info-cards-grid {
        grid-template-columns: 1fr;
        gap: 20px;
      }

      .info-card {
        padding: 24px;
      }

      .info-card-value {
        font-size: 20px;
      }

      .cta-button {
        font-size: 16px;
        padding: 18px 32px;
      }

      .footer-bottom {
        flex-direction: column;
        gap: 12px;
      }
    }

    @media (max-width: 480px) {
      .top-header {
        padding: 20px 0;
      }

      .brand-logo {
        height: 40px;
      }

      .hero-title {
        font-size: 28px;
      }

      .usage-card {
        padding: 24px 20px;
      }

      .usage-current-value {
        font-size: 32px;
      }

      .usage-remaining-value {
        font-size: 20px;
      }

      .usage-bar-container {
        height: 24px;
      }

      .info-card {
        padding: 20px;
      }
    }

    /* Popup Modal Styles */
    .popup-overlay {
      display: none;
      position: fixed;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      background: rgba(0, 0, 0, 0.5);
      z-index: 1000;
      justify-content: center;
      align-items: center;
      backdrop-filter: blur(4px);
    }

    .popup-overlay.show {
      display: flex;
    }

    .popup-modal {
      background: var(--white);
      border-radius: 20px;
      max-width: 500px;
      width: 90%;
      max-height: 80vh;
      box-shadow: var(--shadow-lg);
      animation: popupSlideIn 0.3s ease-out;
      display: flex;
      flex-direction: column;
      overflow: hidden;
      position: relative;
    }

    @keyframes popupSlideIn {
      from {
        opacity: 0;
        transform: translateY(-20px);
      }
      to {
        opacity: 1;
        transform: translateY(0);
      }
    }

    .popup-header {
      padding: 32px 32px 24px;
      text-align: center;
      flex-shrink: 0;
      background: var(--white);
    }

    .popup-title {
      font-size: 24px;
      font-weight: 700;
      color: var(--text-dark);
      margin-bottom: 8px;
    }

    .popup-subtitle {
      font-size: 14px;
      color: var(--text-medium);
    }

    .popup-item-list {
      display: flex;
      flex-direction: column;
      gap: 12px;
      padding: 0 32px;
      overflow-y: auto;
      flex: 1;
      min-height: 0;
    }

    .popup-item {
      padding: 20px;
      border: 2px solid var(--border-light);
      border-radius: 12px;
      cursor: pointer;
      transition: all 0.3s ease;
      background: var(--white);
    }

    .popup-item:hover {
      border-color: var(--gold);
      background: var(--gold-light);
      transform: translateY(-2px);
      box-shadow: var(--shadow-sm);
    }

    .popup-item.selected {
      border-color: var(--gold-dark);
      background: var(--gold-light);
      box-shadow: 0 0 0 3px rgba(212, 175, 55, 0.2);
    }

    .popup-item-name {
      font-size: 18px;
      font-weight: 600;
      color: var(--text-dark);
      margin-bottom: 4px;
    }

    .popup-item-id {
      font-size: 13px;
      color: var(--text-light);
    }

    .popup-actions {
      display: flex;
      gap: 12px;
      padding: 24px 32px 32px;
      flex-shrink: 0;
      background: var(--white);
      border-top: 1px solid var(--border-light);
    }

    .popup-button {
      flex: 1;
      padding: 16px;
      border: none;
      border-radius: 12px;
      font-size: 16px;
      font-weight: 600;
      cursor: pointer;
      transition: all 0.3s ease;
    }

    .popup-button-confirm {
      background: var(--gold);
      color: var(--white);
    }

    .popup-button-confirm:hover {
      background: var(--gold-dark);
      transform: translateY(-2px);
      box-shadow: 0 4px 12px rgba(212, 175, 55, 0.4);
    }

    .popup-button-cancel {
      background: var(--border-light);
      color: var(--text-medium);
    }

    .popup-button-cancel:hover {
      background: #d0d0d0;
    }

    .popup-button-confirm:disabled {
      background: #ccc;
      cursor: not-allowed;
      transform: none;
    }

    .popup-step-indicator {
      display: flex;
      justify-content: center;
      align-items: center;
      gap: 8px;
      margin-bottom: 20px;
      padding-bottom: 16px;
      border-bottom: 1px solid var(--border-light);
    }

    .popup-step {
      display: flex;
      align-items: center;
      gap: 8px;
      font-size: 14px;
      color: var(--text-light);
    }

    .popup-step.active {
      color: var(--gold-dark);
      font-weight: 600;
    }

    .popup-step-number {
      width: 24px;
      height: 24px;
      border-radius: 50%;
      background: var(--border-light);
      color: var(--text-medium);
      display: flex;
      align-items: center;
      justify-content: center;
      font-weight: 600;
      font-size: 12px;
    }

    .popup-step.active .popup-step-number {
      background: var(--gold);
      color: var(--white);
    }

    .popup-step-divider {
      width: 30px;
      height: 2px;
      background: var(--border-light);
    }

    .popup-step.active ~ .popup-step-divider,
    .popup-step.active + .popup-step-divider {
      background: var(--gold-light);
    }

    .popup-back-button {
      position: absolute;
      top: 32px;
      left: 32px;
      background: none;
      border: none;
      color: var(--text-medium);
      font-size: 16px;
      cursor: pointer;
      display: none;
      align-items: center;
      gap: 8px;
      padding: 8px;
      border-radius: 8px;
      transition: all 0.3s ease;
      z-index: 10;
    }

    .popup-back-button:hover {
      background: var(--gold-light);
      color: var(--gold-dark);
    }

    .popup-back-button.show {
      display: flex;
    }

    @media (max-width: 480px) {
      .popup-modal {
        width: 95%;
      }

      .popup-header {
        padding: 24px 24px 20px;
      }

      .popup-item-list {
        padding: 0 24px;
      }

      .popup-actions {
        padding: 20px 24px 24px;
      }

      .popup-back-button {
        top: 24px;
        left: 24px;
      }

      .popup-title {
        font-size: 20px;
      }

      .popup-item {
        padding: 16px;
      }

      .popup-item-name {
        font-size: 16px;
      }
    }
  </style>
</head>
<body>
<header class="top-header">
  <div class="container">
    <div class="header-inner">
      <a th:href="${esimLogoLink}" class="logo-link">
        <img th:src="${'/api/assets/img/esimcity/' + esimLogoType + '.png'}" alt="eSIM CITY" class="brand-logo">
      </a>
    </div>
  </div>
</header>

<section class="status-alert" th:if="${end}">
  <div class="container">
    <div class="status-alert-content">
      <svg class="status-icon" viewBox="0 0 24 24" fill="currentColor">
        <path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm-2 15l-5-5 1.41-1.41L10 14.17l7.59-7.59L19 8l-9 9z"/>
      </svg>
      <span>서비스가 만료되었습니다</span>
    </div>
  </div>
</section>

<main>
  <div class="container">
    <section class="hero-section">
      <h1 class="hero-title">데이터 사용량</h1>
      <p class="hero-subtitle">현재 eSIM 사용 현황을 확인하세요</p>
    </section>

    <section class="usage-card-wrapper">
      <div class="usage-card">
        <div class="usage-header">
          <span class="usage-label" >데이터</span>
          <span class="usage-total" th:text="${totalUsageTxt}"></span>
        </div>
        <div class="usage-header-reset">
          <span class="usage-charge" th:utext="${resetTxt}"></span>
        </div>

        <div class="usage-visual">
          <div class="usage-stats">
            <div class="usage-current">
              <div class="usage-current-label">사용량</div>
              <div class="usage-current-value" id="usage-amount" th:text="${usageTxt}">0 MB</div>
            </div>
            <div class="usage-remaining">
              <div class="usage-remaining-label">남은 용량</div>
              <div class="usage-remaining-value" id="remaining-amount">-</div>
            </div>
          </div>
          <div class="usage-bar-container">
            <div class="usage-bar" id="usage-bar" style="width: 0%"></div>
          </div>
          <div class="usage-percentage-text">
            사용률: <span class="usage-percentage-value" id="usage-percentage">0%</span>
          </div>
        </div>
      </div>
    </section>

    <section class="info-section">
      <div class="info-cards-grid">
        <div class="info-card info-card-full">
          <div class="info-card-title">구매상품</div>
          <div class="info-card-value" th:text="${title}"></div>
        </div>

        <div class="info-card info-card-full">
          <div class="info-card-title">사용기간(한국시간)</div>
          <div class="info-card-value" th:if="${useStartDate != null && !#strings.isEmpty(useStartDate)}"
               th:text="${useStartDate + ' ~ ' + useEndDate}"></div>
          <div class="info-card-value" th:unless="${useStartDate != null && !#strings.isEmpty(useStartDate)}">
            활성화 전
          </div>
        </div>


        <div class="info-card info-card-full">
          <div class="info-card-title">ICCID 번호</div>
          <div class="info-card-value" th:text="${iccid}"></div>
        </div>
      </div>
    </section>

    <section class="cta-wrapper" th:if="${chargeYN!='NONE'}">
      <button th:if="${chargeYN=='Y'}" id="chargeBtn" class="cta-button" th:text="${chargeBtnTxt}" style="width:100%"></button>
      <a th:if="${chargeYN=='N'}" class="cta-button-none" style="width:100%">충전 불가 상품</a>
    </section>
    <section class="cta-wrapper">
      <a th:href="${esimQuestLink}" class="cta-button">고객 지원 문의하기</a>
    </section>
  </div>
</main>

<footer class="main-footer">
  <div class="container">
    <div class="footer-inner">
      <img th:src="${'/api/assets/img/esimcity/' + esimLogoType + '.png'}" alt="eSIM CITY" class="footer-logo">
      <p class="footer-tagline">Connect Anywhere, Anytime</p>
      <div class="footer-divider"></div>
      <div class="footer-bottom">
        <p class="footer-copyright" th:text="${esimCopyWrite}"></p>
      </div>
    </div>
  </div>
</footer>

<!-- Popup Modal for Charge Item Selection -->
<div id="chargePopup" class="popup-overlay">
  <div class="popup-modal">
    <button class="popup-back-button" id="popupBackBtn" onclick="goBackToDaysStep()">
      <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
        <path d="M19 12H5M12 19l-7-7 7-7"/>
      </svg>
      뒤로
    </button>
    <div class="popup-header">
      <div class="popup-step-indicator">
        <div class="popup-step" id="step1Indicator">
          <div class="popup-step-number">1</div>
          <span>일수 선택</span>
        </div>
        <div class="popup-step-divider"></div>
        <div class="popup-step" id="step2Indicator">
          <div class="popup-step-number">2</div>
          <span>용량 선택</span>
        </div>
      </div>
      <div class="popup-title" id="popupTitle">일수 선택</div>
      <div class="popup-subtitle" id="popupSubtitle">충전할 일수를 선택해주세요</div>
    </div>
    <div class="popup-item-list" id="popupItemList">
      <!-- Items will be populated by JavaScript -->
    </div>
    <div class="popup-actions">
      <button class="popup-button popup-button-cancel" onclick="closeChargePopup()">취소</button>
      <button class="popup-button popup-button-confirm" id="popupConfirmBtn" onclick="confirmChargeSelection()" disabled>다음</button>
    </div>
  </div>
</div>

<script th:inline="javascript">
  var totalUsage = [[${totalUsage}]];
  var usage = '[[${usage}]]';

  var chargeBtnTxt = /*[[${chargeBtnTxt}]]*/ '';
  var deviceId = /*[[${deviceId}]]*/ null;
  var iccid = /*[[${iccid}]]*/ null;
  var realOrderId = /*[[${realOrderId}]]*/ null;
  var apiPurchaseItemList = /*[[${apiPurchaseItemList}]]*/ [];
  var selectedChannelDataplanId = null;
  var selectedDays = null;
  var selectedData = null;
  var uniqueDays = []; // 중복 제거된 일수 목록
  var uniqueDataList = []; // 선택한 일수에 해당하는 중복 제거된 데이터 목록
  var currentStep = 1; // 1: 일수 선택, 2: 용량 선택

  // 중복 제거된 일수 목록 생성
  function getUniqueDays() {
    var daysSet = new Set();
    apiPurchaseItemList.forEach(function(item) {
      if (item.channel_dataplan_day) {
        daysSet.add(item.channel_dataplan_day);
      }
    });
    uniqueDays = Array.from(daysSet).sort(function(a, b) {
      var numA = parseInt(a.replace('일', ''));
      var numB = parseInt(b.replace('일', ''));
      return numA - numB;
    });
  }

  // 선택한 일수에 해당하는 중복 제거된 데이터 목록 생성
  function getUniqueDataForDays(days) {
    var dataSet = new Set();
    apiPurchaseItemList.forEach(function(item) {
      if (item.channel_dataplan_day === days && item.channel_dataplan_data) {
        dataSet.add(item.channel_dataplan_data);
      }
    });
    uniqueDataList = Array.from(dataSet).sort(function(a, b) {
      // GB, MB 단위를 고려한 정렬
      var aNum = parseFloat(a.replace(/[GB|MB]/gi, ''));
      var bNum = parseFloat(b.replace(/[GB|MB]/gi, ''));
      var aUnit = a.toUpperCase().indexOf('GB') > -1 ? 1024 : 1;
      var bUnit = b.toUpperCase().indexOf('GB') > -1 ? 1024 : 1;
      return (aNum * aUnit) - (bNum * bUnit);
    });
  }

  // 선택한 일수와 데이터로 channel_dataplan_id 찾기
  function findChannelDataplanId(days, data) {
    for (var i = 0; i < apiPurchaseItemList.length; i++) {
      var item = apiPurchaseItemList[i];
      if (item.channel_dataplan_day === days && item.channel_dataplan_data === data) {
        return item.channel_dataplan_id;
      }
    }
    return null;
  }

  // 충전 실행 함수 (기존 로직을 함수로 분리)
  function executeCharge(selectedChannelDataplanId) {
    // 1. AJAX로 백엔드에 결제 키 생성 요청 (POST 방식)
    if(selectedChannelDataplanId==undefined || selectedChannelDataplanId==null || selectedChannelDataplanId==''){
      return;
    }
    $.ajax({
      url: "/external/portone/ready",
      type: "POST",
      contentType: "application/json",
      data: JSON.stringify({
        'deviceId': deviceId,
        'apiPurchaseItemProcutId': selectedChannelDataplanId,
        'iccid': iccid,
        'realOrderId': realOrderId ,
        type:'TUGE'
      }),
      beforeSend: function() {
        $("#chargeBtn").text("처리 중...").prop("disabled", true);
      },
      success: function(data) {
        if (data.result) {
          openOutlink(data);
        } else {
          alert("결제 주소를 생성하지 못했습니다.");
          resetButton();
        }
      },
      error: function(xhr, status, error) {
        console.error("에러 발생:", error);
        alert("서버 통신 중 오류가 발생했습니다.");
        resetButton();
      }
    });
  }

  // 팝업 열기 (1단계: 일수 선택)
  function openChargePopup() {
    if (!apiPurchaseItemList || apiPurchaseItemList.length === 0) {
      return;
    }

    getUniqueDays();
    showDaysStep();
    $('#chargePopup').addClass('show');
  }

  // 1단계: 일수 선택 화면 표시
  function showDaysStep() {
    currentStep = 1;
    selectedDays = null;
    selectedData = null;
    selectedChannelDataplanId = null;

    // 단계 표시 업데이트
    $('#step1Indicator').addClass('active');
    $('#step2Indicator').removeClass('active');
    $('#popupBackBtn').removeClass('show');

    // 제목 및 설명 업데이트
    $('#popupTitle').text('일수 선택');
    $('#popupSubtitle').text('충전할 일수를 선택해주세요');

    // 일수 목록 생성
    var daysListHtml = '';
    uniqueDays.forEach(function(days) {
      // 해당 일수에 몇 개의 데이터 옵션이 있는지 확인
      var dataCount = 0;
      apiPurchaseItemList.forEach(function(item) {
        if (item.channel_dataplan_day === days) {
          dataCount++;
        }
      });

      daysListHtml += '<div class="popup-item" data-days="' + days + '" onclick="selectDays(this)">';
      daysListHtml += '<div class="popup-item-name">' + days + '</div>';
      daysListHtml += '<div class="popup-item-id">' + dataCount + '개 용량 옵션</div>';
      daysListHtml += '</div>';
    });

    $('#popupItemList').html(daysListHtml);
    $('#popupConfirmBtn').text('다음').prop('disabled', true);
  }

  // 2단계: 용량 선택 화면 표시
  function showDataStep() {
    if (!selectedDays) return;

    currentStep = 2;
    selectedData = null;
    selectedChannelDataplanId = null;

    getUniqueDataForDays(selectedDays);

    // 단계 표시 업데이트
    $('#step2Indicator').addClass('active');
    $('#popupBackBtn').addClass('show');

    // 제목 및 설명 업데이트
    $('#popupTitle').text('용량 선택');
    $('#popupSubtitle').text(selectedDays + ' 상품의 용량을 선택해주세요');

    // 용량 목록 생성
    var dataListHtml = '';
    uniqueDataList.forEach(function(data) {
      dataListHtml += '<div class="popup-item" data-data="' + data + '" onclick="selectData(this)">';
      dataListHtml += '<div class="popup-item-name">' + data + '</div>';
      dataListHtml += '<div class="popup-item-id">' + selectedDays + ' ' + data + '</div>';
      dataListHtml += '</div>';
    });

    $('#popupItemList').html(dataListHtml);
    $('#popupConfirmBtn').text('선택').prop('disabled', true);
  }

  // 일수 선택
  function selectDays(element) {
    $('.popup-item').removeClass('selected');
    $(element).addClass('selected');
    selectedDays = $(element).data('days');
    $('#popupConfirmBtn').prop('disabled', false);
  }

  // 용량 선택
  function selectData(element) {
    $('.popup-item').removeClass('selected');
    $(element).addClass('selected');
    selectedData = $(element).data('data');
    $('#popupConfirmBtn').prop('disabled', false);
  }

  // 뒤로가기 (일수 선택으로)
  function goBackToDaysStep() {
    showDaysStep();
  }

  // 팝업 닫기
  function closeChargePopup() {
    $('#chargePopup').removeClass('show');
    currentStep = 1;
    $('.popup-item').removeClass('selected');
    $('#step1Indicator').removeClass('active');
    $('#step2Indicator').removeClass('active');
    $('#popupBackBtn').removeClass('show');
  }

  // 선택 확인 및 다음 단계 또는 결제 진행
  function confirmChargeSelection() {
    if (currentStep === 1) {
      // 1단계: 일수 선택 완료 -> 2단계로 이동
      if (selectedDays) {
        showDataStep();
      }
    } else if (currentStep === 2) {
      // 2단계: 용량 선택 완료 -> channel_dataplan_id 찾아서 결제 진행
      if (selectedDays && selectedData) {
        selectedChannelDataplanId = findChannelDataplanId(selectedDays, selectedData);
        if (selectedChannelDataplanId) {
          closeChargePopup();
          executeCharge(selectedChannelDataplanId);
        } else {
          alert('선택한 상품을 찾을 수 없습니다.');
        }
      }
    }
  }

  // 팝업 외부 클릭 시 닫기
  $(document).ready(function() {
    $('#chargePopup').click(function(e) {
      if ($(e.target).hasClass('popup-overlay')) {
        closeChargePopup();
      }
    });

    // ESC 키로 팝업 닫기
    $(document).keydown(function(e) {
      if (e.key === 'Escape' && $('#chargePopup').hasClass('show')) {
        closeChargePopup();
      }
    });

    // chargeBtn 클릭 이벤트
    $("#chargeBtn").click(function() {
      openChargePopup();
    });
  });
  async function openOutlink(data) {

    PortOne.requestPayment({
      redirectUrl: data.redirectUrl,
      // Store ID 설정
      storeId: data.storeId,
      // 채널 키 설정
      channelKey: data.channelKey,
      paymentId: `${data.token}`,
      orderName: data.orderName,
      totalAmount: data.totalAmount,
      currency: "CURRENCY_KRW",
      payMethod: "CARD",
    });



    // 이동 후 버튼 원복 (뒤로가기 대비)
    setTimeout(resetButton, 10000);
  }

  function resetButton() {
    $("#chargeBtn").text(chargeBtnTxt).prop("disabled", false);
  }


  const usageBar = document.getElementById('usage-bar');
  const usagePercentage = document.getElementById('usage-percentage');
  const remainingAmount = document.getElementById('remaining-amount');

  function updateProgress() {
    let percentage = 0;
    let remaining = 0;
    if (totalUsage == "unlimited") {
      percentage = 100;
      remainingAmount.textContent = '무제한';
    } else if (totalUsage && totalUsage != '0' && totalUsage != '0.0') {
      percentage = Math.min((Number(usage) / Number(totalUsage)) * 100, 100);
      remaining = Math.max(Number(totalUsage) - Number(usage), 0);

      if (remaining >= 1024) {
        remainingAmount.textContent = (remaining / 1024).toFixed(2) + ' GB';
      } else {
        remainingAmount.textContent = remaining.toFixed(2) + ' MB';
      }
    } else {
      remainingAmount.textContent = '-';
    }

    usageBar.style.width = percentage + '%';
    usagePercentage.textContent = Math.round(percentage) + '%';
  }

  setTimeout(updateProgress, 300);
</script>
</body>
</html>
